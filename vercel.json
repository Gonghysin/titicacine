{
    "version": 2,
    "builds": [
        {
            "src": "src/api.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.9",
                "installCommand": "python -m pip install -r requirements.txt"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/api.py"
        }
    ]
} 