{
    "version": 2,
    "builds": [
        {
            "src": "src/api.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb",
                "runtime": "python3.9",
                "excludeFiles": ["**/*.pyc", "**/__pycache__/**"]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/api.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "PIP_NO_DEPS": "false",
        "PIP_DISABLE_PIP_VERSION_CHECK": "1"
    }
} 