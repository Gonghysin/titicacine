{
    "version": 2,
    "builds": [
        {
            "src": "src/api.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb",
                "runtime": "python3.9",
                "buildCommand": "python -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/api.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "PYTHONUNBUFFERED": "1",
        "VIRTUAL_ENV": ".venv"
    },
    "build": {
        "env": {
            "PIP_TARGET": ".pip"
        }
    }
} 